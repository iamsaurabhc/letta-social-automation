{
    "name": "monorepo-template",
    "version": "1.0.0",
    "private": true,
    "scripts": {
      "dev": "pnpm build:common && pnpm --parallel -r dev",
      "build:common": "pnpm --filter common build",
      "build": "pnpm --filter common build && pnpm --parallel --filter \"!common\" build",
      "start": "pnpm --parallel -r start",
      "clean": "rm -rf node_modules **/node_modules",
      "install:clean": "pnpm clean && pnpm install",
      "test": "pnpm -r test",
      "lint": "pnpm -r lint"
    },
    "engines": {
      "node": ">=18.0.0",
      "pnpm": ">=8.0.0"
    },
    "packageManager": "pnpm@8.x"
  }